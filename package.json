{
  "name": "code-snippet-collector",
  "publisher": "chinmay-sawant",
  "displayName": "CodeMemos",
  "description": "Collect and store code snippets with relative paths",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codeSnippetCollector.saveSnippet",
        "title": "Save Code Snippet",
        "category": "Snippet Collector"
      },
      {
        "command": "codeSnippetCollector.clearHighlights",
        "title": "Clear All Highlights",
        "category": "Snippet Collector"
      },
      {
        "command": "myExtension.showInteractiveUI",
        "title": "Show Interactive UI"
      }
    ],
    "keybindings": [
      {
        "command": "codeSnippetCollector.saveSnippet",
        "key": "ctrl+shift+s",
        "when": "editorHasSelection"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "codeSnippetCollector.saveSnippet",
          "when": "editorHasSelection",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTests.js",
    "install-local": "vsce package && code --install-extension $(ls *.vsix | head -1) --force && rm *.vsix"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "glob": "^10.4.1",
    "mocha": "^10.4.0",
    "typescript": "^5.4.5",
    "@vscode/test-electron": "^2.3.9"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/chinmay-sawant/Dokumenter.git"
  }
}
